$xwiki.ssx.use('DisplayerCode.imageOnTop')

{{html wiki="true"}}
&lt;div class="row"&gt;
  #foreach($document in $blockDisplayerDocList)
    #set($title = $document.getTitle())
    #set($description = $document.description)
    #set($url = $document.url)
    #set($urlLogo = $document.getAttachmentURL($document.getValue('image'), 'download'))

    &lt;div class="col-xs-12 col-md-3 row topRow topdisplayer"&gt;
      &lt;div class="col-md-12 display-table vcenter center topimgContainer"&gt;
        &lt;div class="display-cell"&gt;
          &lt;span class='topTitle'&gt;
            $title
          &lt;/span&gt;
          &lt;img class="topImage" src="${urlLogo}" alt="Responsive image"&gt;
        &lt;/div&gt;
      &lt;/div&gt;#*
    *#&lt;div class="col-md-12 display-table topdContainer vcenter"&gt;
        &lt;div class="display-cell"&gt;
          &lt;div class="topDescription"&gt;
      $description
          &lt;/div&gt;
          {{html}}
          &lt;div class="imgTopLink"&gt;
            &lt;a href='$escapetool.xml($url)'&gt;More info&lt;/a&gt;
          &lt;/div&gt; 
          {{/html}}
        &lt;/div&gt;
      &lt;/div&gt;
    &lt;/div&gt;
  #end
&lt;/div&gt;
{{/html}}
