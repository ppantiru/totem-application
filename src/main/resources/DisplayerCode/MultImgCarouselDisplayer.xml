    <property>
      <code>require(['jquery'], function ($) {
$( window ).load(function() {
  $('#myCarousel').carousel({
  interval: 6000
});
});

$('.carousel .item').each(function(){
  var nr_images = 5;
    
  var next = $(this);
  for (i=0; i&lt;nr_images; i++){
    next = next.next();
    if (!next.length) {
      next = $(this).siblings(':first');
    }
    next.children(':first-child').clone().appendTo($(this));
  }
});

var flip = 0;
$( "#toggle" ).click(function() {
$( '.multiImgdisplayermob' ).toggle( flip++ % 2 === 0 );
});
});</code>
